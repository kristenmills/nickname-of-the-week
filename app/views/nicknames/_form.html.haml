= form_for @nickname do |f|
  - if @nickname.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nickname.errors.count, "error")} prohibited this nickname from being saved:"
      %ul
        - @nickname.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :week
    = f.text_field :week
  .actions
    = f.submit 'Save'
